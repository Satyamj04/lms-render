# Environment Configuration Template
# Copy this file to .env and fill in your configuration

# ============================================================================
# DJANGO SETTINGS
# ============================================================================

# Django settings module
DJANGO_SETTINGS_MODULE=myproject.settings

# Debug mode (set to False in production)
DEBUG=True

# Secret key for Django (generate with: python -c 'import secrets; print(secrets.token_urlsafe(50))')
SECRET_KEY=your-secret-key-here

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# Database backend: postgresql, sqlite, or mysql
DB_ENGINE=sqlite

# SQLite configuration (if using SQLite)
DB_NAME=db.sqlite3

# PostgreSQL configuration (if using PostgreSQL)
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_NAME=lms_db
DB_POSTGRES_USER=lms_user
DB_POSTGRES_PASSWORD=your-password-here

# MySQL configuration (if using MySQL)
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_NAME=lms_db
DB_MYSQL_USER=lms_user
DB_MYSQL_PASSWORD=your-password-here

# ============================================================================
# SERVER SETTINGS
# ============================================================================

# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# AUTHENTICATION
# ============================================================================

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Token expiration (in hours)
TOKEN_EXPIRATION_HOURS=24

# ============================================================================
# STORAGE
# ============================================================================

# Media files directory
MEDIA_ROOT=media/

# Static files directory
STATIC_ROOT=staticfiles/

# ============================================================================
# EMAIL SETTINGS
# ============================================================================

# Email backend (console, smtp, or other)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings (if using SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ============================================================================
# CELERY (if using async tasks)
# ============================================================================

# Celery broker URL
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# REDIS (if using caching)
# ============================================================================

# Redis URL
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# FEATURES
# ============================================================================

# Enable/disable features
ENABLE_NOTIFICATIONS=True
ENABLE_LEADERBOARD=True
ENABLE_TEAMS=True
